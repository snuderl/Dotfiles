
URxvt.scrollBar: false
URxvt.font: xft:Dejavu Sans Mono:bold:size=11:antialias=true

URxvt.letterSpace: -1

URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select,font-size,matcher
URxvt.url-select.launcher:  firefox
URxvt.matcher.button:       1
URxvt.url-select.underline: true
URxvt.keysym.C-u:           perl:url-select:select_next
URxvt.keysym.C-Escape:      perl:keyboard-select:activate
URxvt.keysym.C-s:           perl:keyboard-select:search

URxvt.keysym.C-C:   perl:clipboard:copy
URxvt.keysym.C-V:   perl:clipboard:paste
! URxvt.keysym.C-C-v: perl:clipboard:paste_escaped

! Disable picture mode (??). Needed to release Shift+Ctrl keybind.
URxvt.iso14755: False

! Increase and decrease font size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

